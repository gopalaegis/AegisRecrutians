@model Tuple<int, CONSTRUCTION.Models.SEOModel>
@{
        ViewBag.Title = Model.Item2.SEOtitle;
        ViewBag.MetaDescription = Model.Item2.MetaDescription;
        ViewBag.MetaKeywords = Model.Item2.FocusKeyphrase;
        ViewBag.IsCrawlString = Model.Item2.IsCrawlString;
        ViewBag.CanonicalURL = Model.Item2.CanonicalURL;
        ViewBag.SchemaTags = Model.Item2.SchemaTags;
}

<!-- heading section -->
<section class="heading pt-3 pb-3">
        <div class="container">
                <div class="row">
                        <div class="col-12">
                                <div class="section-header text-center">
                                        <h1>@Model.Item2.H1</h1>
                                </div>
                        </div>
                </div>
        </div>
</section>

<!-- show list -->
<section class="show_list pt-3 pb-3 titan">
        <div class="container">
                <div class="row mt-2">
                        <div class="col-12" id="jobDiv">
                                @Html.Action("List", "jobs", new { TechnologyId = Model.Item1, technologyCityId = Model.Item2.cityId })
                        </div>
                </div>
                <br />
                <div class="row">
                        <iframe id="descriptionDiv" src="@Url.Action("BindHTMLCity","Jobs",new {Id=Model.Item2.Id,CityId=Model.Item2.cityId})" frameborder="0" style="overflow:hidden;height:100%;width:100%" height="100%" width="100%"></iframe>
                </div>
        </div>
</section>
<script>
        // Selecting the iframe element
        var frame = document.getElementById("descriptionDiv");

        // Adjusting the iframe height onload event
        frame.onload = function ()
        // function execute while load the iframe
        {
                // set the height of the iframe as
                // the height of the iframe content
                frame.style.height =
                        frame.contentWindow.document.body.scrollHeight + 'px';               

        }
</script>
<script>

        //$(document).ready(function () {
        //        debugger;
        //        var data = $("#hiddenHtml").val();
        //        $("#jobDiv-style-main").html(data);
        //});

    $("#jobDiv").on("click", ".pageList", function () {
                var page = $(this).attr("data-page");
                var technology = '@(Model)';
                $.ajax({
                        url: '@Url.Action("List", "jobs")',
                        data: {
                                page: page,
                                TechnologyId: technology
                        },
                        success: function (result) {
                                $("#jobDiv").html("");
                                $("#jobDiv").html(result);
                        }
                });
        });
</script>
