<script>

    $("#jobDiv").on("click", ".pageList", function () {
                var page = $(this).attr("data-page");
                var city = '@(Model.City)';
                var title = '@(Model.Title)';
                var technology = '@(Model.TechnologyId)';
                $.ajax({
                        url: '@Url.Action("List", "jobs")',
                        data: {
                                page: page,
                                city: city,
                                title: title,
                                TechnologyId: technology
                        },
                        success: function (result) {
                                $("#jobDiv").html("");
                                $("#jobDiv").html(result);
                        }
                });
        });
</script>
