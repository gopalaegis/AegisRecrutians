                            <p>618 GALA EMPIRE, Opp. Durdarshan Tower, Drivein Road, Ahmedabad - 380 054, Gujarat - India</p>
                            <p><a href="#"><span class="__cf_email__" data-cfemail="e1888f878ea18084868892928e879595848289cf828e8c">hr@aegissofttech.com</span></a></p>
                        </div>
                    </div>
                    <div class="col-4 col-sm-12 col-md-12">
                        <div class="apache-bigdata-features">
                            <span class="sprite map1"></span>
                            <h3 class="border-water">Australia Office</h3>
                            <p>Level 32, 152 St Georges Tce, 6000 Perth, Western Australia</p>
                            <p><a href="3"><span class="__cf_email__" data-cfemail="cda5be8daca8aaa4bebea2abb9b9a8aea5e3aea2a0">hr@aegissofttech.com</span></a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script>
    $(".contact-form").on("click", "#btnContactSubmit", function () {
        var fname = $(".contact-form").find("#contactfname").val();
        var lname = $(".contact-form").find("#contactlname").val();
        var email = $(".contact-form").find("#contactemail").val();
        var subject = $(".contact-form").find("#contactsubject").val();
        var comment = $(".contact-form").find("#contactcomments").val();

        var IsError = false;

        if (fname == null || fname == "") {
            IsError = true;
            $(".contact-form").find("#label_error_Fname").show();
        }

        if (lname == null || lname == "") {
            IsError = true;
            $(".contact-form").find("#label_error_Lname").show();
        }

        if (email == null || email == "") {
            IsError = true;
            $(".contact-form").find("#label_error_Ename").show();
        } else if (!EmailValidation(email)) {
            IsError = true;
            $(".contact-form").find("#label_error_EmailFormat").show();
        }

        if (subject == null || subject == "") {
            IsError = true;
            $(".contact-form").find("#label_error_Sname").show();
        }

        if (comment == null || comment == "") {
            IsError = true;
            $(".contact-form").find("#label_error_Comments").show();
        }

        if (IsError == true) {
            return false;
        } else {
            $.ajax({
                type: "POST",
                url: '@Url.Action("SendMail", "Home")',
                data: {
                    Fname: fname,
                    Lname: lname,
                    Ename: email,
                    Subject: subject,
                    Comment: comment
                },
                success: function (result) {
                    if (result == "Success") {
                        $(".contact-form").find("#contactfname").val("");
                        $(".contact-form").find("#contactlname").val("");
                        $(".contact-form").find("#contactemail").val("");
                        $(".contact-form").find("#contactsubject").val("");
                        $(".contact-form").find("#contactcomments").val("");

                        $("#alert_inquiry_success").html("Massage genrated successfully");
                        $("#alert_inquiry_success").show();
                        setTimeout(function () { $("#alert_inquiry_success").hide(); }, 2000);
                    }
                    else {
                        $(".contact-form").find("#name").val("");
                        $(".contact-form").find("#email").val("");
                        $(".contact-form").find("#mobile").val("");
                        $(".contact-form").find("#description").val("");

                        $("#alert_inquiry_error").html("Error, Please try again after some time.");
                        $("#alert_inquiry_error").show();
                        $(".closeInquiry").click();
                        setTimeout(function () { $("#alert_inquiry_error").hide(); }, 2000);
                    }
                }
            });
        }
    });
</script>