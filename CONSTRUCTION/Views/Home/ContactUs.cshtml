                        <form>
                            <div class="bs-row">
                                <div class="col-6 col-md-12">
                                    <div class="form-group">
                                        <input class="form-control" id="contactfname" type="text" name="fname" placeholder="First Name">
                                        <label id="label_error_Fname" class="errorMessage" style="display:none;">First Name is required</label>
                                    </div>
                                </div>
                                <div class="col-6 col-md-12">
                                    <div class="form-group">
                                        <input class="form-control" id="contactlname" type="text" name="lname" placeholder="Last Name">
                                        <label id="label_error_Lname" class="errorMessage" style="display:none;">Last Name is required</label>
                                    </div>
                                </div>
                            </div>
                            <div class="bs-row">
                                <div class="col-6 col-md-12">
                                    <div class="form-group">
                                        <input class="form-control" id="contactemail" type="text" name="email" placeholder="Email Name">
                                        <label id="label_error_Ename" class="errorMessage" style="display:none;">Email Name is required</label>
                                        <label id="label_error_EmailFormat" class="errorMessage" style="display:none;">Email Name is not Valid</label>
                                    </div>
                                </div>
                                <div class="col-6 col-md-12">
                                    <div class="form-group">
                                        <input class="form-control" id="contactsubject" type="text" name="subject" placeholder="Subject Name">
                                        <label id="label_error_Sname" class="errorMessage" style="display:none;">Subject Name is required</label>
                                    </div>
                                </div>
                            </div>
                            <div class="bs-row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <textarea class="form-control" cols="4" rows="5" id="contactcomments" placeholder="Comments" type="text"></textarea>
                                        <label id="label_error_Comments" class="errorMessage" style="display:none;">Comments is required</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="submit-btn">
                                        <button type="button" id="btnContactSubmit" value="Submit" name="Submit" class="btn_default">Send Message</button>
                                    </div>
                                </div>
                                <div class="col-12" style="padding: 10px">
                                    <span id="lblContactInfo" style="color: red;"> </span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="contact-section-box spb-70">
            <div class="container">
                <div class="section-header-1">
                    <h3>Come Say Hello To Us...</h3>
                </div>
                <div class="bs-row">

                    <div class="col-4 col-sm-12 col-md-12">
                        <div class="apache-bigdata-features">
                            <span class="sprite map2"></span>
