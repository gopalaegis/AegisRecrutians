@model CONSTRUCTION.Areas.Admin.Model.JobDetailsViewModel
<script src="~/ckeditor/ckeditor.js"></script>

<input type="hidden" id="txt_Id" value="@Model.Id" />

<div class="row">
    <div class="col-md-12">
        <div class="card profile-card mb-3">
            <div class="card-header"> Job Information </div>
            <div class="card-body">
                <div class="row formGroup">
                    <div class="col-sm-6">
                        <label>Title <span style="color:red">*</span></label>
                        <input type="text" id="txt_Title" value="@Model.Title" placeholder="Title" class="form-control" />
                        <label id="label_error_Title" class="errorMessage" style="display: none; color: red">Title is required</label>
                    </div>
                    <div class="col-sm-6">
                        <label>Description <span style="color:red">*</span></label>
                        <input type="text" id="txt_Description" value="@Model.Description" placeholder="Description" class="form-control" />
                        <label id="label_error_Description" class="errorMessage" style="display: none; color: red">Description is required</label>
                    </div>
                </div>
                @*<div class="row formGroup">
                    <div class="col-sm-6">
                            <label>Category <span style="color:red">*</span></label>
                            @Html.DropDownListFor(model => model.CategoryList, new SelectList(Model.CategoryList, "Value", "Text"), new { @class = "form-control drp_categoryList" })
                            <label id="label_error_Category" class="errorMessage" style="display: none; color: red">Category is required</label>
                    </div>
                    <div class="col-sm-6">
                            <label>Sub Category <span style="color:red">*</span></label>
                            @Html.DropDownListFor(model => model.SubCategoryList, new SelectList(Model.SubCategoryList, "Value", "Text"), new { @class = "form-control drp_subcategory" })
                            <label id="label_error_SubCategory" class="errorMessage" style="display: none; color: red">SubCategory is required</label>
                    </div>
            </div>*@
                <div class="row formGroup">
                    @*<div class="col-sm-6">
                        <label>Profession <span style="color:red">*</span></label>
                        @Html.DropDownListFor(model => model.ProfessionList, new SelectList(Model.ProfessionList, "Value", "Text"), new { @class = "form-control drp_profession" })
                        <label id="label_error_Profession" class="errorMessage" style="display: none; color: red">Profession is required</label>
                </div>*@
                    <div class="col-sm-6">
                        <label>Country <span style="color:red">*</span></label>
                        @Html.DropDownListFor(model => model.CountryList, new SelectList(Model.CountryList, "Value", "Text"), new { @class = "form-control custom-select drp_country" })
                        <label id="label_error_Country" class="errorMessage" style="display: none; color: red">Country is required</label>
                    </div>
                    <div class="col-sm-6">
                        <label>City <span style="color:red">*</span></label>
                        @Html.DropDownListFor(model => model.CityList, new SelectList(Model.CityList, "Value", "Text"), new { @class = "form-control custom-select drp_city" })
                        <label id="label_error_City" class="errorMessage" style="display: none; color: red">City is required</label>
                    </div>
                </div>
                <div class="row formGroup">
                    <div class="col-sm-6">
                        <label>Company Name <span style="color:red">*</span></label>
                        <input type="text" id="txt_CompanyName" value="@Model.CompanyName" placeholder="CompanyName" class="form-control" />
                        <label id="label_error_CompanyName" class="errorMessage" style="display: none; color: red">CompanyName is required</label>
                    </div>
                </div>
                <div class="row formGroup">
                    <div class="col-sm-6">
                        <label>Experience <span style="color:red">*</span></label>
                        <select class="form-control inputstyle requiredField custom-select" data-val="true" id="drp_Experince" name="Experience" title="Experience">
                            <option value="1">0-1</option>
                            <option value="2">1-2</option>
                            <option value="3">1-1</option>
                            <option value="4">2-3</option>
                            <option value="5">3-4</option>
                            <option value="6">4-5</option>
                            <option value="7">5-6</option>
                            <option value="8">5-10</option>
                            <option value="9">6-7</option>
                            <option value="10">7-8</option>
                            <option value="11">8-9</option>
                            <option value="12">10-12</option>
                        </select>
                        <label id="label_error_Experience" class="errorMessage" style="display: none; color: red">Experience is required</label>
                    </div>
                    <div class="col-sm-6">
                        <label>Type <span style="color:red">*</span></label>
                        <select class="form-control inputstyle requiredField custom-select" id="drp_Type" name="JobTypeId">
                            <option value="1">Full Time</option>
                            <option value="2">Part Time</option>
                            <option value="3">Test</option>
                        </select>
                        <label id="label_error_Type" class="errorMessage" style="display: none; color: red">Type is required</label>
                    </div>
                </div>
                <div class="row formGroup">
                    <div class="col-sm-6">
                        <label>Min Experience <span style="color:red">*</span></label>
                        <input type="text" id="txt_MinExperience" value="@Model.MinExperience" placeholder="MinExperience" class="form-control" />
                        <label id="label_error_MinExperience" class="errorMessage" style="display: none; color: red">MinExperience is required</label>
                    </div>
                    <div class="col-sm-6">
                        <label>Max Experience <span style="color:red">*</span></label>
                        <input type="text" id="txt_MaxExperience" value="@Model.MaxExperience" placeholder="MaxExperience" class="form-control" />
                        <label id="label_error_MaxExperience" class="errorMessage" style="display: none; color: red">MaxExperience is required</label>
                    </div>
                </div>
                <div class="row formGroup">
                    <div class="col-sm-6">
                        <label>Min Salary<span style="color:red">*</span></label>
                        <input type="number" id="txt_MinSalary" value="@Model.MinSalary" maxlength="50" min="0" name="MinSalary" placeholder="MinSalary" class="form-control" />
                        <label id="label_error_MinSalary" class="errorMessage" style="display: none; color: red">MinSalary is required</label>
                    </div>
                    <div class="col-sm-6">
                        <label>Max Salary <span style="color:red">*</span></label>
                        <input type="number" id="txt_MaxSalary" value="@Model.MaxSalary" maxlength="50" min="0" name="MaxSalary" placeholder="MaxSalary" class="form-control" />
                        <label id="label_error_MaxSalary" class="errorMessage" style="display: none; color: red">MaxSalary is required</label>
                    </div>
                </div>
                <div class="row formGroup">
                    <div class="col-sm-12">
                        <label>BriefDescription</label>
                        <textarea id="editor" name="editor"></textarea>
                        <label id="label_error_MinSalary" class="errorMessage" style="display: none; color: red">MinSalary is required</label>
                    </div>
                </div>
                <div class="row formGroup">
                    <div class="col-sm-6">
                        <label>Location<span style="color:red">*</span></label>
                        <input type="text" id="txt_Location" value="@Model.Location" name="Location" placeholder="Location" class="form-control" />
                        <label id="label_error_Location" class="errorMessage" style="display: none; color: red">Location is required</label>
                    </div>
                    <div class="col-sm-6">
                        <label>IsVerified <span style="color:red">*</span></label>
                        <select class="form-control inputstyle requiredField custom-select" id="drp_IsVerified" name="IsVerified">
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                        <label id="label_error_IsVerified" class="errorMessage" style="display: none; color: red">IsVerified is required</label>
                    </div>
                </div>
                <div class="row formGroup">
                    <div class="col-sm-6">
                        <label>Show On Home<span style="color:red">*</span></label>
                        <select class="form-control inputstyle requiredField custom-select" id="drp_ShowOnHome" name="ShowOnHome">
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                        <label id="label_error_Location" class="errorMessage" style="display: none; color: red">Location is required</label>
                    </div>
                    <div class="col-sm-3">
                        <label>Company Logo<span class="red">*</span></label>
                        <div class="img-upload">
                            <div class="upbtn">
                                <input autocomplete="off" id="image_browse" value="Upload a file from your computer" class="file-upload"
                                       style="display: block;" accept=".jpg, .png, .jpeg,.bmp, .tif, .tiff|images/*" name="CompanyLogo" type="file" />
                                <button type="button" class="btn btn-md btn-success btn-upload p-10-9"><i class="fa fa-arrow-circle-o-up"></i> Select Image</button>
                                <input type="hidden" id="file_HiddenName" value="@Model.CompanyLogo" />
                                <label id="label_error_CompanyLogo" class="errorMessage" style="display: none; color: red">CompanyLogo is required</label>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-3 align-self-end">
                        @{
                            var finalPic = "/CommonImage/CompanyLogo/" + Model.CompanyLogo;
                        }
                        <img id="img_Profile_Pic" src="@finalPic" style="height:80px;width:80px;" />
                    </div>
                </div>
                <div class="row formGroup">
                    <div class="col-sm-12">
                        <label>Technology<span style="color:red">*</span></label>
                        <table class="dataTable no-footer">
                            @foreach (var item in Model.technologyList)
                            {
                                <tr>
                                    <td class="w-15 p-0">
                                        @if (Model.SelectedTechnology != null)
                                        {
                                            <label class="container">
                                                <input type="checkbox" id="checkbox" checked="checked" value="@item.Value" @(Model.SelectedTechnology.Contains(Convert.ToInt32(item.Value)) ? "checked='checked'" : "") />
                                                <span class="checkmark"></span>
                                            </label>
                                        }
                                        else
                                        {
                                            <label class="container">
                                                <input type="checkbox" id="checkbox" checked="checked" value="@item.Value" ) />
                                                <span class="checkmark"></span>
                                            </label>
                                        }
                                    </td>
                                    <td>
                                        @item.Text
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>

                </div>
            </div>
        </div>
        <div class="float-right">
            <button type="button" class="btn btn-primary btn_save">Save</button>
            <button type="button" class="btn btn-default btn_Close" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>




<script>
    CKEDITOR.replace('editor');
</script>